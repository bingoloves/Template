<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.learn.core.navigation.NavigationBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:nav_bar_title="我的"
        app:nav_bar_bg="@color/colorPrimary"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.learn.component.archeaderview.LGradientArcHeaderView
            android:id="@+id/lg_header_view"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            app:ahv_end_color="#3300BA86"
            app:ahv_start_color="#FF00BA86"
            app:ahv_height="@dimen/dp_30"
            app:ahv_direction="downOutSide"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
</LinearLayout>