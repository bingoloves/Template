<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--BottomNavigationView 自定义样式 去掉默认缩放效果-->
    <style name="navigation_bottom_normal_text">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <style name="navigation_bottom_selected_text">
        <item name="android:textColor">@color/text_red</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>
