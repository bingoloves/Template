<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.xiyu.activity.LoginActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_64"
        android:background="@color/colorPrimary"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/white"/>
    <!--上部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_250"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_4"
        android:background="@color/colorPrimary">
        <!--icon-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_55"
                android:src="@drawable/logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_15"
                android:textSize="30sp"
                android:text="喜鱼优品"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_46"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_17"
            android:layout_marginBottom="@dimen/dp_2"
            android:text="登录"/>
        <TextView
            android:id="@+id/tv_register"
            android:layout_width="@dimen/dp_50"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_102"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_marginBottom="@dimen/dp_4"
            android:text="注册"/>
    </RelativeLayout>
    <!--中间部分-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/dp_61"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!--手机号-->
        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/shape_login_input_bg"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/text_input_login_hint"
                android:textSize="@dimen/sp_15"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_16"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="手机号"/>
            <View
                android:id="@+id/line"
                android:layout_width="@dimen/dp_0_5"
                android:layout_height="@dimen/dp_18"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_86"
                android:background="@color/input_login_bg"/>
            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="#222222"/>
        </RelativeLayout>
        <!--验证码-->
        <RelativeLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_45"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@drawable/shape_login_input_bg"
            android:orientation="horizontal">
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColorHint="@color/text_input_login_hint"
                android:textSize="@dimen/sp_15"
                android:maxLength="11"
                android:paddingLeft="@dimen/dp_16"
                android:textCursorDrawable="@null"
                android:background="@null"
                android:hint="短信验证码"/>
        </RelativeLayout>
        <!--按钮-->
        <Button
            android:id="@+id/login_btn"
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/shape_login_btn_bg"
            android:text="登 录"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/white"/>
    </LinearLayout>
    <!--底部隐私协议-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_19"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_input_login_hint"
            android:textSize="@dimen/sp_9"
            android:text="登录即代表同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp_9"
            android:text="《用户协议》和《隐私政策》"/>
    </LinearLayout>
</LinearLayout>
