<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg"
    tools:context="com.xiyu.activity.RegisterActivity">
    <com.learn.core.navigation.NavigationBar
        android:id="@+id/nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:nav_bar_title="注册"
        app:nav_bar_left_image="@drawable/ic_navbar_back_black"
        app:nav_bar_title_color="@color/black"
        app:nav_bar_bg="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="账号信息"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/text_888888"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="姓名"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/text_input_register_hint"
                android:hint="请输入完整姓名"
                android:textSize="@dimen/sp_17"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="手机号"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/text_input_register_hint"
                android:hint="手机号将用于登录账号"
                android:textSize="@dimen/sp_17"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="推荐人"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/text_input_register_hint"
                android:hint="推荐人手机号"
                android:textSize="@dimen/sp_17"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <!--店铺信息-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="店铺信息"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_8"
        android:layout_marginLeft="@dimen/dp_15"
        android:textColor="@color/text_888888"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="店名"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/text_input_register_hint"
                android:hint="店铺名称"
                android:textSize="@dimen/sp_17"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="区域"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/text_input_register_hint"
                android:hint="安徽省 合肥市 长丰县"
                android:textSize="@dimen/sp_17"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_refresh"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line"
            android:layout_marginLeft="@dimen/dp_15"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_9"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15">
            <TextView
                android:layout_width="@dimen/dp_90"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="地址"/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@color/text_input_register_hint"
                android:hint="街道、门牌号信息"
                android:textSize="@dimen/sp_17"
                android:singleLine="true"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="@dimen/dp_22"
                android:layout_height="@dimen/dp_22"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@drawable/ic_location"/>
        </LinearLayout>
    </LinearLayout>
    <!--主营范围-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/white"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_9"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15">
        <TextView
            android:layout_width="@dimen/dp_90"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:text="主营范围"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColorHint="@color/text_input_register_hint"
            android:hint="火锅店"
            android:textSize="@dimen/sp_17"
            android:singleLine="true"
            android:layout_weight="1"/>
        <View
            android:layout_width="@dimen/dp_16"
            android:layout_height="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:background="@drawable/ic_arrow_down_select"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_17"
        android:orientation="horizontal">
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="#9B9B9B"
            android:text="已阅读并同意"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《用户协议》和《隐私政策》"
            android:textSize="@dimen/sp_13"
            android:textColor="#576B95"/>
    </LinearLayout>
    <!--注册按钮-->
    <Button
        android:id="@+id/register_btn"
        android:layout_width="@dimen/dp_335"
        android:layout_height="@dimen/dp_47"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/shape_login_btn_bg"
        android:text="免费注册"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"/>
</LinearLayout>
